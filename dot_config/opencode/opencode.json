{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "jira issue list *": "allow",
      "jira issue view *": "allow",
      "go test *": "allow",
      "go mod *": "allow",
      "go fmt *": "allow",
      "go vet *": "allow",
      "go run *": "allow",
      "go list *": "allow",
      "go get *": "allow",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git branch *": "allow",
      "pwd": "allow"
    },
    "webfetch": "ask"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.config/context7/key}"
      },
      "enabled": true
    }
  }
}
